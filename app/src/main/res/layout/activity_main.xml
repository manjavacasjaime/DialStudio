<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:context=".MainActivity">

    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/imageView"
    android:elevation="2dp" />

    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:id="@+id/light"
    android:elevation="4dp"
    android:background="@mipmap/shadow"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#FFFFFFF"
    android:id="@+id/Hex"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:elevation="5dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="15dp"
    android:layout_centerHorizontal="true"
    android:textStyle="bold" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Swipe anywhere"
    android:id="@+id/Touch"
        android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:elevation="5dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/w"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DIAL"
    android:id="@+id/v"
    android:textColor="#FFFFFF"
    android:textSize="46sp"
    android:elevation="5dp"
        android:textStyle="bold"
    android:textIsSelectable="false"
    android:letterSpacing="0.5"
        android:layout_above="@+id/w"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDIO"
        android:id="@+id/w"
        android:textColor="#FFFFFF"
        android:textSize="46sp"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:letterSpacing="0.5"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:id="@+id/imageView2"
        android:elevation="4dp"
        android:background="@mipmap/shadow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#FFFFFFF"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/Hex"
        android:layout_alignStart="@+id/Hex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#FFFFFFF"
        android:id="@+id/percG"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#FFFFFFF"
        android:id="@+id/percB"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/percG"
        android:layout_alignLeft="@+id/percG"
        android:layout_alignStart="@+id/percG" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Intensity:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:elevation="5dp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="     RED"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/Touch"
        android:layout_toEndOf="@+id/Touch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  GREEN"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    BLUE"
        android:textSize="24sp"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
